<p id="notice"><%= notice %></p>

<h3>Title:</h3>
<%= @post.name %>
<h3>Content:</h3>
<%= @post.content %>
<h3>Tags:</h3>
<ul>
  <% @post.tags.each do |tag| %>
  <li><%= tag.name %></li>
  <% end %>
</ul>

Add a comment:<br>
<%= form_for [@post, @comment] do |f| %>
	<%= f.label :content %>
	<%= f.text_area :content, id: "Content" %><br>
	<%= f.submit %>
<% end %>

<%= render @comments %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
